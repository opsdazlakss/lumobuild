rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- YARDIMCI FONKSİYONLAR ---
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return request.auth != null && getUserData().role == 'admin';
    }
    
    function isModerator() {
      return request.auth != null && (getUserData().role == 'moderator' || isAdmin());
    }
    
    // Sadece belirli alanların değiştiğini kontrol edenler
    function onlyUpdatingReactions() {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions']);
    }
    
    function onlyUpdatingUnreadMentions() {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['unreadMentions']);
    }
    
    function onlyUpdatingPollVotes() {
      return resource.data.type == 'poll' 
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['poll']);
    }
    
    function onlyUpdatingFcmTokens() {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(['fcmTokens']);
    }

    // --- USERS KOLEKSİYONU ---
    match /users/{userId} {
      allow read: if true;
      
      // Oluşturma: Kullanıcı kendi dokümanını oluşturabilir
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Güncelleme: 
      // 1. Admin her şeyi yapabilir
      // 2. Kullanıcı kendi profilini güncelleyebilir ANCAK kritik alanları (role, isBanned) değiştiremez
      allow update: if request.auth != null && (
        isAdmin() || 
        (request.auth.uid == userId && (
             // Sadece bildirim/okunmamış sayılarını güncelliyor olabilir
             onlyUpdatingUnreadMentions() || 
             onlyUpdatingFcmTokens() || 
             // YA DA profil değişikliği yapıyor ama 'role' ve 'isBanned' alanlarına dokunmuyor
             (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isBanned', 'isVerified']))
        ))
      );
      
      // Silme: Sadece Admin
      allow delete: if isAdmin();

      // Incoming Calls
      match /incomingCalls/{callId} {
        allow read, write: if request.auth != null;
      }
    }

    // --- SERVERS KOLEKSİYONU ---
    match /servers/{serverId} {
      allow read: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
      
      // Server Members
      match /members/{userId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if isAdmin();
        allow delete: if isAdmin() || request.auth.uid == userId;
      }
      
      // Server Channels
      match /channels/{channelId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
        
        // Channel Messages
        match /messages/{messageId} {
          allow read: if request.auth != null;
          allow create: if request.auth != null;

          allow update: if request.auth != null && (
            request.auth.uid == resource.data.userId 
            || isModerator() 
            || onlyUpdatingReactions()
            || onlyUpdatingPollVotes()
          );
          allow delete: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
        }
        
        match /typing/{odaId} {
          allow read, write: if request.auth != null;
        }
        
        // Voice Channel Participants
        match /voiceParticipants/{odaId} {
          allow read, create: if request.auth != null;
          allow update: if request.auth != null && request.auth.uid == resource.data.odaId;
          allow delete: if request.auth != null && (request.auth.uid == resource.data.odaId || isAdmin());
        }
      }

      // Server Roles
      match /roles/{roleId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
      }
    }
    
    // Invite Codes
    match /inviteCodes/{code} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if isAdmin();
    }
    
    // Global Roles (if used outside servers)
    match /roles/{roleId} { 
        allow read: if request.auth != null; 
        allow write: if isAdmin(); 
    }
    
    // Admin Logs
    match /adminLogs/{logId} { 
        allow read: if isAdmin(); 
        allow create: if request.auth != null; 
        allow update, delete: if isAdmin(); 
    }

    // Direct Messages (DMs)
    match /dms/{dmId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read: if request.auth != null && 
                      request.auth.uid in get(/databases/$(database)/documents/dms/$(dmId)).data.participants;
        allow create: if request.auth != null && 
                      request.auth.uid in get(/databases/$(database)/documents/dms/$(dmId)).data.participants;
        allow update: if request.auth != null && request.auth.uid == resource.data.userId;
        allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
      }
    }

    // System (Version Check)
    match /system/{docId} {
      allow read: if true; 
      allow write: if isAdmin();
    }
  }
}